#!/bin/bash

MOUL=$(awk '$1=="MOULFACE"{print $2}' .config)
JAIL=$(awk '$1=="JAIL"{print $2}' .config)
BACKUP=$(ls ~ | grep "YOUGOTSTALLMAND")

if [ -z "${BACKUP}" ]; then
	mv ~/.face ~/YOUGOTSTALLMAND
fi
cp -fr $MOUL ~/.face
cp ~/YOUGOTSTALLMAND $JAIL/stalled_$(whoami)
clear
kill -9 $PPID 
# ^- MIGHT cause terminal to exit before it can actually copy .face to JAIL
#    Unsure tho, can someone test this thorougly??