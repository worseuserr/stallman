#!/bin/bash

# Full untracability protection
if [[ ! $1 == "nozsh" ]]; then
	$0 nozsh &
	history -p
	clear
	zsh
	kill -9 $PPID
	exit 0
fi

# This makes sure to reset brightness when terminal is closed
set () { xrandr --output eDP --brightness $1; }
quit () { set 1; }
trap quit EXIT

# Might make this a full utility function
deci ()
{
	NUM=$(printf "%04d" $1)
	N=$(echo $NUM | head -c1)
	DEC=$(echo $NUM | tail -c4)
	echo $N.$DEC
}

# By fractions of 1000
VAL=1000
BY=1
T=3
FIXDELAY=1000
STARTDELAY=0

clear
sleep $(deci $STARTDELAY)
while true; do
	VAL=1000
	while [ $VAL -gt 0 ]; do
		VAL=$(($VAL - $BY))
		set $(deci $VAL)
		sleep $(deci $T)
	done
	sleep $(deci $FIXDELAY)
	set 1
done
set 1