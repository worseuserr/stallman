#!/bin/bash

TARGET_DIR=$(awk '$1=="SGOINFRE"{print $2}' .config)

if [ ! -d "$TARGET_DIR" ]; then
	echo "sgoinfre not found, wtf??"
	exit 1
fi

for file in "$TARGET_DIR"/*.sm; do
	if [ -f "$(awk '$1=="SCRIPTS"{print $2}' .config)/$(basename "$file")" ]; then
		echo "Removed: $file"
		rm -rf "$file"
	fi
done

echo "Done removing stallman files."
